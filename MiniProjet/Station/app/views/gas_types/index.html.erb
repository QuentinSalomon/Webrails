<p id="notice"><%= notice %></p>

<h1>Listing Gas Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gas_types.each do |gas_type| %>
      <tr>
        <td><%= gas_type.name %></td>
        <td><%= link_to 'Show', gas_type %></td>
        <td><%= link_to 'Edit', edit_gas_type_path(gas_type) %></td>
        <td><%= link_to 'Destroy', gas_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


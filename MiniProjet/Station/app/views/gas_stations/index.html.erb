<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <h1>Listing Gas Stations</h1>

    <table>
      <thead>
        <tr>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Name</th>
          <th>Brand</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @gas_stations.each do |gas_station| %>
          <tr>
            <td><%= gas_station.latitude %></td>
            <td><%= gas_station.longitude %></td>
            <td><%= gas_station.name %></td>
            <td><%= gas_station.brand %></td>

            <td><%= link_to 'Show', gas_station %></td>
            <% if (can? :manage, current_user) %>
              <td><%= link_to 'Edit', edit_gas_station_path(gas_station) %></td>
              <td><%= link_to 'Destroy', gas_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if current_user != nil %>
      <% if current_user.has_role?(:admin) %>
        <br>
        <%= link_to 'New Gas station', new_gas_station_path %>
      <% end %>
    <% end %>
  </div>
</div>
